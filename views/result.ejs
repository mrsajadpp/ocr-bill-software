<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bill Example</title>
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .header {
            padding: 20px 0;
        }

        .logo {
            width: 160px;
            /* Adjust this to fit your logo size */
        }

        .bill-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .bill-table th,
        .bill-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .bill-table th {
            background-color: #f4f4f4;
        }

        .bill-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .bill-table tfoot td {
            font-weight: bold;
            text-align: right;
            padding-right: 20px;
        }

        /* Styling for the link */
        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            font-size: 13px;
            color: #000;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #000;
        }

        /* Styling for the button */
        button {
            background-color: #000;
            color: white;
            border: none;
            padding: 10px 10px;
            font-size: 13px;
            cursor: pointer;
            margin-top: 20px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #000;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <img src="https://i.postimg.cc/NMBT7K0n/tikketu.png" alt="Logo" class="logo">
        </div>
        <table class="bill-table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% result.items.forEach(function(item) { %>
                    <tr>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.quantity %>
                        </td>
                        <td>
                            <%= item.unit_price %>
                                <%= result.currency %>
                        </td>
                        <td>
                            <%= item.total_price %>
                                <%= result.currency %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total</td>
                    <td>
                        <%= result.total %>
                            <%= result.currency %>
                    </td>
                </tr>
            </tfoot>
        </table>
        <a href="/">Upload another image</a> &nbsp;&nbsp;
        <button id="download-pdf">Download PDF</button>
    </div>
</body>

</html>